<Window x:Class="BD5.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD5"
        mc:Ignorable="d"
        Title="AuthorizationWindow" MinHeight="300" MinWidth="400" Height="300" Width="400">
    <Grid Background="#9C90BF" >
        <Grid Margin="30" Background=" #F0F0F0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Авторизация" FontSize="14" FontFamily="Cascadia Code SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="loginTextBox" Grid.Row="1" FontFamily="Cascadia Code SemiBold" VerticalAlignment="Center" Margin="5"/>
            <PasswordBox x:Name="passwordBox" PasswordChar="*" Grid.Row="2" FontFamily="Cascadia Code SemiBold" VerticalAlignment="Center" Margin="5"/>

            <Button x:Name="authorizationButton" Grid.Row="3" Content="Авторизоваться" FontFamily="Cascadia Code SemiBold" Margin="5" Click="authorizationButton_Click"/>
        </Grid>
    </Grid>
</Window>
